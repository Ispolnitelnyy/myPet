{
   "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": { "*": ["./src/*"] },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
   },
   "ts-node": { "compilerOptions": { "module": "CommonJS" } },
   "plugins": [{ "name": "typed-scss-modules" }],
   "include": [
      "./config/test/setupTest.ts",
      "**/*.ts",
      "**/*.tsx"
   ]
}
